<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.meapy.meapy.SendFileActivity"
    android:id="@+id/sendFileLay">


    <EditText
        android:layout_marginTop="50dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/titleTextSend"
        android:hint="@string/title_send_hint" />
    <RelativeLayout
        android:layout_margin="20dp"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_below="@id/titleTextSend"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fileSendFile"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/fileNameSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/filename_send_hint"
                android:layout_centerVertical="true"
                android:textAlignment="center"
                />

            <Spinner
                android:id="@+id/filesSendFile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/fileNameSend"
                android:layout_toLeftOf="@+id/importFileBtnSend" />

            <Button
                android:id="@+id/importFileBtnSend"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="@android:color/white"
                android:text="+"/>



        </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:id="@+id/groupSendFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fileSendFile">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/group_send_hint"
                android:layout_centerVertical="true"
                android:id="@+id/txtGrp"/>

            <Spinner
                android:id="@+id/groupNameSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/txtGrp"
                android:layout_toLeftOf="@id/addGroupSendFile"
                android:layout_centerVertical="true"

                ></Spinner>
            <Button
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/addGroupSendFile"
                android:textColor="@android:color/white"
                android:background="@android:color/transparent"/>
        </RelativeLayout>

        <RelativeLayout

            android:id="@+id/discSendFile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/groupSendFile">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/discipline_send_hint"
                android:id="@+id/txtDisc"/>
            />
            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/discNameSend"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/addDiscSendFile"
                android:layout_toRightOf="@id/txtDisc"

                ></Spinner>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="+"
                android:id="@+id/addDiscSendFile"
                android:textColor="@android:color/white"
                android:background="@android:color/transparent"/>
        </RelativeLayout>

        <EditText
            android:layout_centerHorizontal="true"
            android:id="@+id/descTextSend"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:hint="@string/descr_send_label"
            android:layout_below="@id/discSendFile"
            />

    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/takePhotoSendFile"
        android:src="@drawable/ic_camera_alt_white_24dp"
        android:backgroundTint="@color/colorButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="25dp"/>
    <Button
        android:id="@+id/fileBtnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:background="@color/colorButton"
        android:text="@string/send_btn_label"
        android:textColor="@android:color/white" />
</RelativeLayout>
