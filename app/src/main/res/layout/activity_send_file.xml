<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.meapy.meapy.SendFileActivity">

    <TextView
        android:id="@+id/headTextSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_file"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="30dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fileSendFile"
            android:layout_marginBottom="15dp">
            <EditText
                android:id="@+id/fileNameSend"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="Filename"
                />
            <Button
                android:id="@+id/importFileBtnSend"
                android:background="@drawable/round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/fileNameSend"
                android:textColor="@color/white"
                android:text="+"/>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/groupSendFile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fileSendFile">

            <EditText
                android:id="@+id/groupNameSend"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:hint="Groupname" />

            <Button
                android:id="@+id/groupButtonSend"
                android:background="@drawable/round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/groupNameSend"
                android:textColor="@color/white"
                android:text="+"/>



        </RelativeLayout>


        <EditText
            android:id="@+id/descTextSend"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:hint="Description"
            android:layout_below="@id/groupSendFile"/>
    </RelativeLayout>

    <Button
        android:id="@+id/fileBtnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp"
        android:background="@drawable/rounded_button"
        android:text="Send"
        android:textColor="@color/white" />
</RelativeLayout>
