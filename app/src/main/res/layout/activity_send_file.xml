<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.meapy.meapy.SendFileActivity">

    <TextView
        android:id="@+id/headTextSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_file"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="30dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        >

        <EditText
            android:id="@+id/fileNameSend"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="filename"
            />
        <Button
            android:id="@+id/fileButtonSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/fileNameSend"
            android:text="+"/>

        <EditText
            android:id="@+id/groupNameSend"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/fileNameSend"
            android:hint="groupname" />

        <Button
            android:id="@+id/groupButtonSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/groupNameSend"
            android:layout_below="@id/fileButtonSend"
            android:text="+"/>

        <EditText
            android:id="@+id/descTextSend"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_below="@id/groupNameSend"
            android:hint="description" />
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:background="@color/colorButton"
        />
</RelativeLayout>
