<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/mainLayoutGroupView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgGroup"
        android:background="@drawable/avatar"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:layout_width="50dp"/>

    <LinearLayout
        android:id="@+id/layoutLinesText"
        android:layout_toRightOf="@+id/imgGroup"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:paddingTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <TextView
            android:id="@+id/nameGroup"
            android:fontFamily="sans-serif"
            android:text="Groupe 1"
            style="@style/TextAppearance.AppCompat.Body2"
            android:layout_width="wrap_content"
            android:textStyle="bold"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/lastMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nameGroup"
            android:text="Dernier ajout"
            style="@style/TextAppearance.AppCompat.Body1"
            android:textStyle="italic"
            android:layout_alignLeft="@+id/nameGroup"/>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/layoutLinesText"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/divider"/>

</RelativeLayout>