<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:id="@+id/drawer_one_group"
    tools:context="project.meapy.meapy.groups.OneGroupActivity">
    

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbarOnegroup"></android.support.v7.widget.Toolbar>
        <!--<android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_oneGroup"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorButton"
            android:elevation="4dp"
            >


                <ImageButton
                    android:id="@+id/openDrawerBtn"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="start"
                    android:src="@drawable/ic_dehaze_white_24dp"
                    />

        </android.support.v7.widget.Toolbar>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/headerOneGroup"
            android:layout_margin="10dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imageGroupOneGroup"
                android:src="@drawable/logo_app1"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imageGroupOneGroup">
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:text="GROUP NAME"
                    android:id="@+id/groupNameOneGroup"
                    />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/limitOneGroup"
                    android:layout_below="@id/groupNameOneGroup"
                    android:text="LIMITATIONS"
                    />

            </RelativeLayout>

        </RelativeLayout>

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sendFileOneGroup"
                android:src="@drawable/ic_note_add_white_24dp"
                android:layout_gravity="bottom|end"
                android:backgroundTint="@color/colorButton"
                android:layout_margin="20dp"/>
            </android.support.design.widget.CoordinatorLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testPosts"
            android:layout_below="@id/headerOneGroup"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/headerOneGroup"
            android:id="@+id/postsOneGroup">

            <!-- mettre les differents posts ici -->

        </ListView>

    </LinearLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/side_menu_one_group"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/menu_side_one_group"
        android:layout_gravity="start"
        android:background="@color/background"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorButton">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/ic_create_new_folder_white_24dp"
                    android:id="@+id/addDiscOneGroup"/>
                <ImageButton
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/leaveGroupPostDetails"
                    android:backgroundTint="@android:color/transparent"
                    android:src="@drawable/ic_exit_to_app_white_24dp"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@color/colorButton">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_build_white_24dp"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_alignParentRight="true"/>

            </RelativeLayout>

        </RelativeLayout>


    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
