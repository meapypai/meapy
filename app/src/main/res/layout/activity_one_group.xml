<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:id="@+id/drawer_one_group"
    tools:context="project.meapy.meapy.groups.OneGroupActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:background="@color/colorButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar_oneGroup"
            android:padding="3dp">
           <ImageButton
               android:id="@+id/openDrawerBtn"
               android:backgroundTint="@android:color/transparent"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_dehaze_white_24dp"
               />
        </LinearLayout>
        <!--<android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_oneGroup"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorButton"
            android:elevation="4dp"
            >


                <ImageButton
                    android:id="@+id/openDrawerBtn"
                    android:backgroundTint="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="start"
                    android:src="@drawable/ic_dehaze_white_24dp"
                    />

        </android.support.v7.widget.Toolbar>-->

        <RelativeLayout
            android:layout_below="@id/toolbar_oneGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/headerOneGroup"
            android:layout_margin="10dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:id="@+id/imageGroumOneGroup"
                android:src="@drawable/logo_app1"/>

            <TextView
                android:layout_toRightOf="@id/imageGroumOneGroup"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GROUP NAME"
                android:id="@+id/groupNameOneGroup"/>

        </RelativeLayout>

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sendFileOneGroup"
            android:src="@drawable/ic_add_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/colorButton"
            android:layout_margin="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testPosts"
            android:layout_below="@id/headerOneGroup"/>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/headerOneGroup"
            android:id="@+id/postsOneGroup">

            <!-- mettre les differentes matieres ici -->

        </ListView>

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/side_menu_one_group"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/menu_side_one_group"
        android:layout_gravity="start"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Disc"
            android:layout_gravity="bottom"
            android:id="@+id/addDiscOneGroup"/>

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
