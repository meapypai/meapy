<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.meapy.meapy.JoinGroupActivity">

    <RelativeLayout
        android:layout_margin="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/join_group_desc_label"
        android:id="@+id/tvjoinGroup"/>
    <EditText
        android:layout_centerHorizontal="true"
        android:id="@+id/codeToJoinGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvjoinGroup"
        android:hint="@string/code_group_ex_hint"
        />

        <Button
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/codeToJoinGroup"
            android:layout_centerHorizontal="true"
            android:background="@color/colorButton"
            android:id="@+id/okJoinGroup"
            android:text="Ok"/>

    </RelativeLayout>

</RelativeLayout>
