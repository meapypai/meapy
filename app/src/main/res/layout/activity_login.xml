        <!--android:padding="10dp"-->
        <!--android:text="@string/register"-->
        <!--android:textColor="@android:color/white"-->
        <!--android:textStyle="bold" />-->
    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>
