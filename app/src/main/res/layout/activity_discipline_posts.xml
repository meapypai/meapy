<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.meapy.meapy.DisciplinePostsActivity"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:id="@+id/headerDiscPosts">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Discipline"
           />
        <Spinner
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerDiscPosts"></Spinner>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="search"
            />

    </LinearLayout>
    <ListView
        android:layout_below="@id/headerDiscPosts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listPostDiscPosts">


    </ListView>

</RelativeLayout>
