<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="project.meapy.meapy.DisciplinePostsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/headerDiscPosts">

        <Spinner
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:id="@+id/spinnerDiscPosts"></Spinner>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fieldSearchedDisPosts"
            android:layout_toRightOf="@id/spinnerDiscPosts"
            />

    </RelativeLayout>
    <ListView
        android:id="@+id/listPostDiscPosts"
        android:layout_below="@id/headerDiscPosts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="5dp"
        android:divider="@android:color/transparent">


    </ListView>

</RelativeLayout>
