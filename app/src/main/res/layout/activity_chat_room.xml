<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="project.meapy.meapy.ChatRoomActivity"
    android:background="@color/colorInputMessage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/topbottomchat"
        android:id="@+id/headerChatRoom">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/round"
            android:layout_margin="5dp"/>
        <TextView
            android:id="@+id/nameGroupeChatRoom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Groupe 1"
            />

    </LinearLayout>

    <ListView
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollMessagesChat"
        android:layout_below="@id/headerChatRoom"
        android:transcriptMode="alwaysScroll"
        android:dividerHeight="15dp"
        android:divider="@android:color/transparent"
        android:layout_above="@id/writeMessageChatroom">
    </ListView>

    <RelativeLayout
        android:id="@+id/writeMessageChatroom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom"
        android:layout_centerHorizontal="true"
        android:background="@color/topbottomchat"
        android:padding="5dp">

        <EditText
            android:id="@+id/messageIdChatRoom"
            android:layout_width="match_parent"
            android:background="@drawable/edittext_round"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/sendChatRoom"
            android:hint="Write message"
            android:textColorHint="@color/colorInputMessage"
            android:layout_marginLeft="5dp"/>

        <ImageButton
            android:id="@+id/sendChatRoom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/round"
            android:padding="10dp"
            android:src="@drawable/ic_send_black_24dp" />
    </RelativeLayout>
</RelativeLayout>
