<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    tools:context="project.meapy.meapy.JoinGroupActivity">


    <TextView
        android:id="@+id/questionRemovePost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want to remove this post ?"/>

    <Button
        android:id="@+id/btnYes"
        android:layout_below="@+id/questionRemovePost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Yes"/>

    <Button
        android:layout_below="@+id/questionRemovePost"
        android:layout_toRightOf="@+id/btnYes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No"/>

</RelativeLayout>
