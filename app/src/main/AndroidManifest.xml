<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="project.meapy.meapy">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_app1"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_app1"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".groups.discussions.DiscussionGroupsActivity"
            android:label="@string/groups_label_name"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".SendFileActivity"
            android:label="Add a file">
        </activity>

        <activity
            android:name=".ChatRoomActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            android:windowSoftInputMode="stateHidden" />

        <activity
            android:name=".CreateGroupActivity"
            android:label="Create group"
            android:screenOrientation="portrait" />

        <activity
            android:name=".RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PostDetailsActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".groups.joined.MyGroupsActivity"
            android:label="My groups"
            android:screenOrientation="portrait" />

        <activity
            android:name=".groups.OneGroupActivity"
            android:label="Posts"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <activity
            android:name=".AddDisciplineActivity"
            android:theme="@style/Theme.AppCompat.DayNight.Dialog" />
        <activity android:name=".DisciplinePostsActivity" />

        <activity android:name=".LeaveGroupActivity"
            android:theme="@style/Theme.AppCompat.DayNight.Dialog"></activity>
    </application>

</manifest>